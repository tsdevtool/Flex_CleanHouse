<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi nhấn -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- Màu khi nhấn -->
            <corners android:radius="12dp"/> <!-- Bo góc -->
        </shape>
    </item>

    <!-- Trạng thái bình thường -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Màu nền nút -->
            <stroke android:width="2dp" android:color="#CCCCCC"/> <!-- Viền -->
            <corners android:radius="12dp"/> <!-- Bo góc -->
        </shape>
    </item>
    <item android:drawable="@drawable/logogoogle"
        android:gravity="center_vertical|right"
        android:right="16dp" />
</selector>