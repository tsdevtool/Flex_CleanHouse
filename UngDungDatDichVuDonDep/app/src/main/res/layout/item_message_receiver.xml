<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="start"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <ImageView
            android:id="@+id/imgAvt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/icons8_admin_64"/>
        <TextView
            android:id="@+id/txttime"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin - 12h20"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginEnd="10dp"
            />
    </LinearLayout>
    <!-- Tin nhắn của quản trị viên -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#D9D9D9"
        android:padding="10dp"
        android:layout_marginStart="10dp"
        android:elevation="2dp">

        <!-- Nội dung tin nhắn -->
        <TextView
            android:id="@+id/text_message_received"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Sample message from admin ksdhjf ksdfnksjklj klsdf skdhfk kjdfkshjf"
            android:textColor="@color/black"
            android:textSize="20dp"/>
    </LinearLayout>
</LinearLayout>
