<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NhanVien.ChinhSach"
    android:orientation="vertical"
    android:padding="10dp"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/backToNV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/baseline_arrow_back_24" />

    </LinearLayout>

    <!-- Horizontal Scrollable Row -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:scrollbars="none">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <!-- Single Row -->
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp">

                <LinearLayout
                    android:id="@+id/layoutQuyTrinh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_process" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quy trình xử lý đơn"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:paddingTop="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutVi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_wallet" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thu nhập và Ví"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:paddingTop="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutChinhSach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/heart" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chính sách phúc lợi"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:paddingTop="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutHoptac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/partnership" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hợp tác cùng ShopeeFood"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:paddingTop="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutTaiKhoan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/account" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tài khoản và Ứng dụng"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:paddingTop="8dp" />
                </LinearLayout>

            </TableRow>
        </TableLayout>
    </HorizontalScrollView>

    <!-- Câu hỏi thường gặp -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Câu hỏi thường gặp"
        android:padding="10dp"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtCau1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chính sách bảo hiểm"
            android:padding="10dp"
            android:background="?android:attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/txtCau2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chính sách hỗ trợ"
            android:padding="10dp"
            android:background="?android:attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/txtCau3"


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chính sách hằng ngày"
            android:padding="10dp"
            android:background="?android:attr/selectableItemBackground"/>


    </LinearLayout>

</LinearLayout>