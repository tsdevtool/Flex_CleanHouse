<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#E4E4E4">

    <!-- Date, Time, and Service Type -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:paddingBottom="8dp">

        <!-- Date -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25/07/2024"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginEnd="8dp" />

        <!-- Start Time -->
        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15h30"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginEnd="8dp" />

        <!-- Service -->
        <TextView
            android:id="@+id/tvService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dọn dẹp nhà"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginStart="8dp"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- Address -->
    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123 Nguyễn Đình Chiểu, Phường 2,..."
        android:textColor="#000000"
        android:textSize="14sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginBottom="8dp" />

    <!-- Status -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đang xử lý"
        android:textSize="14sp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginBottom="8dp" />

    <!-- Cost and Points Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <!-- Cost -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/money" />

            <TextView
                android:id="@+id/tvCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200,000đ"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Points -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/medal_award" />

            <TextView
                android:id="@+id/tvPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200 Points"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Action Button -->
        <Button
            android:id="@+id/btnAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ĐẶT LẠI"
            android:textColor="@android:color/holo_blue_dark"
            android:background="@android:color/transparent"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>
