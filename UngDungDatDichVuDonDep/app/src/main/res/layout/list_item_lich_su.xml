<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_background"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:elevation="2dp"
    android:gravity="center_vertical">

    <!-- Date, Time, and Service Type (First Row) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Date -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20/09/2024"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginEnd="8dp"
            android:textStyle="bold"/>

        <!-- Time -->
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12h30"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginEnd="8dp"
            android:textStyle="bold"/>

        <!-- Service Type -->
        <TextView
            android:id="@+id/tvServiceType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dọn dẹp nhà"
            android:textSize="14sp"
            android:textColor="#000000"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Address (Second Row) -->
    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123 Nguyễn Đình Chiểu, Phường 2,..."
        android:textSize="14sp"
        android:textColor="#808080"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginStart="10dp"/>

    <!-- Price, Points, and Rebook Button (Third Row) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <!-- Price -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="16dp">

            <ImageView
                android:id="@+id/imgPriceIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/money"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200,000đ"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Points -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="16dp">

            <ImageView
                android:id="@+id/imgPointsIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/medal_award"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/tvPoints"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:text="200 Points"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Rebook Button -->
        <TextView
            android:id="@+id/tvRebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ĐẶT LẠI"
            android:textColor="#4CAF50"
            android:textSize="14sp"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>
